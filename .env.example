# Application
APP_NAME="Document Intelligence"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO

# API
API_PREFIX=/api/v1
API_KEY=your-secret-api-key-change-in-production
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database
DATABASE_URL=postgresql+asyncpg://docuser:docpassword@localhost:5432/docintel
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Storage (S3/MinIO)
STORAGE_TYPE=s3
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=documents
S3_REGION=us-east-1

# AI Models
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

DEFAULT_EXTRACTION_MODEL=claude-sonnet-4-20250514
FALLBACK_EXTRACTION_MODEL=gpt-4o

# Processing
MAX_FILE_SIZE_MB=50
ALLOWED_MIME_TYPES=["application/pdf","image/jpeg","image/png","image/webp","image/tiff"]
MAX_PAGES_PER_DOCUMENT=100
EXTRACTION_TIMEOUT_SECONDS=120

# Queue
WORKER_CONCURRENCY=10

# Webhooks
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_MAX_RETRIES=3
